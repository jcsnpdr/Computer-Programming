#include <iostream>

using namespace std;

int main ()
{
	double g, gallons, b;
	g=1.10;
	
	cout << "enter amount of gallons consumed: ";
	cin >> gallons;
	cout << "enter remaining balance: ";
	cin >> b;
	cout << endl;
	
	if (b ==0 )
	{
	cout << " Your total bill is " << g*gallons + 35;
	}
	else 
	{
	cout << "your total bill is " << g*gallons + 35 + b + 20;
	}
	cout << endl;
	return 0;
}
